<?import java.net.URL?>
<AnchorPane prefHeight="250.0" prefWidth="460.0" style="-fx-background-color: #fdfaf6; -fx-border-color: #8C7853; -fx-border-width: 3;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pt.ipp.isep.dei.ui.gui.simulation.SaveSimulationGUI">
    <stylesheets>
        <URL value="@../buttons.css" />
    </stylesheets>
    <children>

        <Rectangle arcHeight="25.0" arcWidth="25.0" fill="#8C7853" height="220.0" layoutX="20.0" layoutY="15.0" width="420.0">
            <effect>
                <DropShadow color="#00000055" radius="12" />
            </effect>
        </Rectangle>

        <Label alignment="CENTER" layoutX="70.0" layoutY="30.0" prefWidth="320.0" text="ðŸ’¾ Save your progress?" textFill="WHITE">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
